{% extends 'AppBundle::template_default.html.twig' %}

{% block subtitle %}Eventdetails{% endblock %} 

{% block content %}
<div class="container">
	<hr>
	<div class="row">
		<div class="col-sm-12 col-md-5">
		    <h1>{{ entity }}</h1>
		
		    <table class="table table-responsive">
		        <tbody>
		            <tr>
		                <th>Id</th>
		                <td>{{ entity.id }}</td>
		            </tr>
		            <tr>
		                <th>Number</th>
		                <td>{{ entity.number }}</td>
		            </tr>
		            <tr>
		                <th>Name</th>
		                <td>{{ entity.name }}</td>
		            </tr>
		            <tr>
		                <th>Datum Hauptveranstaltung</th>
		                <td>{{ entity.date|date('d.m.Y') }}</td>
		            </tr>
		            <tr>
		                <th>zugeordnete Turniere</th>
		                <td>
		                	<ul>
			                {% for tournament in entity.tournaments %}
			                	<li><small>{{ tournament.date | date('d.m.Y') }}</small> <a href="{{ path('tournament_show', { 'id': tournament.id }) }}"><i class="fa fa-fw fa-tag"></i> {{ tournament.name }}</a></li>
			                {% else %}
			                	<li><a href="{{ path('tournament') }}">keine Turniere zugeordnet</a></li>
			                {% endfor %}
		                	</ul>
		                </td>
		            </tr>
		        </tbody>
   		 	</table>

	        <ul class="record_actions">
			    <li>
			        <a href="{{ path('event_index') }}">
			            Back to the list
			        </a>
			    </li>
			    <li>
			        <a href="{{ path('event_edit', { 'id': entity.id }) }}">
			            Edit
			        </a>
			    </li>
			    <li>{{ form(delete_form) }}</li>
			</ul>
		</div>
	</div>
</div>
{% endblock %}
