{% extends 'AppBundle::template_default.html.twig' %}

{% block subtitle %}5-Jahreswertung{% endblock %} 

{% block content %}
<div class="container">
	<hr>
	<div class="row">
		<div class="col-sm-12 col-md-5">
		    <h1>5-Jahreswertung</h1>
		    <div class="list-group">
				<a href="#" class="list-group-item active">
					<h4 class="list-group-item-heading"><i class="fa fa-fw fa-trophy"></i> 5-Jahres-Wertung</h4>
				</a>
				{% include 'AppBundle:Widget:widget_ranking_list.html.twig' with {'ranking' : annualRanking} %}
			</div>
		</div>
	</div>
	
	<div class="row">
	   {% set index = 0 %}
	   {% for col in playerList|batch(playerList|length / 2) %}
	   <div class="col-sm-6">
	       <table class="table">
	           {% for row in col %}{% set index = index + 1 %}
	           <tr>
	               <td>{{ index }}</td>
	               <td>{{ row.player }}</td>
	               <td>{{ row.points }}
	           </tr>
	           {% endfor %}
	       </table>
	   </div>
	   {% endfor %}
	</div>
</div>
{% endblock %}
