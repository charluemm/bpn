{% extends 'AppBundle::template_default.html.twig' %}

{% block subtitle %}Spielerverwaltung{% endblock %} 

{% block content %}
<div class="container">
	<div class="row">
		<div class="page-header">
			<h1>Spieler√ºbersicht <small>alle Spieler</small></h1>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12">
			<div class="btn-group pull-right">
			  <a class="btn btn-default" href="{{ path('player_new') }}"><i class="fa fa-plus"></i> Spieler anlegen</a>
			</div>
		</div>
	</div>
	
	<hr>
	<div class="row">
		<div class="col-sm-12">
		    <table class="table table-striped table-hover table-responsive">
		        <thead>
		            <tr>
		                <th>Id</th>
		                <th class="hidden-sm">Surname</th>
		                <th class="hidden-sm">Givenname</th>
		                <th>Nickname</th>
		                <th>Email</th>
		                <th></th>
		            </tr>
		        </thead>
		        <tbody>
		        {% for entity in entities %}
		            <tr class="clickable-row" data-href="{{ path('player_show', { 'id': entity.id }) }}">
		                <td><a href="{{ path('player_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
		                <td class="hidden-sm">{{ entity.surname }}</td>
		                <td class="hidden-sm">{{ entity.givenname }}</td>
		                <td>{{ entity.nickname }}</td>
		                <td>{{ entity.email }}</td>
		                <td class="text-center">
	                        <a href="{{ path('player_edit', { 'id': entity.id }) }}"><i class="fa fa-fw fa-pencil" alt="bearbeiten" title="bearbeiten"></i> </a>
		                </td>
		            </tr>
		        {% endfor %}
		        </tbody>
		    </table>
	    </div>
	</div>
</div>
{% endblock %}
