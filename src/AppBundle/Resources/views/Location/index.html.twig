{% extends 'AppBundle::template_default.html.twig' %}

{% block subtitle %}Verwaltung{% endblock %} 

{% block content %}
<div class="container">
	<hr>
	<div class="row">
		<div class="col-sm-12">
		    <h1>Location list</h1>
		
		    <table class="table table-striped table-hover table-responsive">
		        <thead>
		            <tr>
		                <th>Id</th>
		                <th>Name</th>
		                <th>Description</th>
		                <th>Adresse</th>
		                <th></th>
		            </tr>
		        </thead>
		        <tbody>
		        {% for entity in entities %}
		            <tr>
		                <td><a href="{{ path('location_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
		                <td>{{ entity.name }}</td>
		                <td>{{ entity.description }}</td>
		                <td>
		                	{{ entity.addressStreet }}<br />
		                	{{ entity.addressPlz }} {{ entity.addressLocation }}
		                </td>
		                <td class="text-center">
		                	<a href="{{ path('location_show', { 'id': entity.id }) }}"><i class="fa fa-fw fa-eye" alt="anzeigen" title="anzeigen"></i> </a> 
	                        <a href="{{ path('location_edit', { 'id': entity.id }) }}"><i class="fa fa-fw fa-pencil" alt="bearbeiten" title="bearbeiten"></i> </a>
	                	</td>
		            </tr>
		        {% endfor %}
		        </tbody>
		    </table>

	        <ul>
		        <li>
		            <a href="{{ path('location_new') }}">
		                Create a new entry
		            </a>
		        </li>
	    	</ul>
	    </div>
    </div>
</div>
{% endblock %}
